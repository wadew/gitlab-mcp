# Coverage configuration
# Note: Most configuration is in pyproject.toml
# This file exists for compatibility with older coverage tools

[run]
source = src
omit =
    */tests/*
    */test_*.py
    */__pycache__/*
    */site-packages/*
branch = True

[report]
precision = 2
show_missing = True
skip_covered = False
exclude_lines =
    pragma: no cover
    def __repr__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    class .*\bProtocol\):
    @(abc\.)?abstractmethod

# Fail if coverage is below threshold
fail_under = 80

[html]
directory = htmlcov
